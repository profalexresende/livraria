@{
}

@model livraria.Models.Autor

<h2>Detalhes do Autor</h2>

<div>
    <h4>@Model.Nome</h4>
    <dl class="dl-horizontal">
        <dt>
            Nacionalidade
        </dt>
        <dd>
            @Model.Nacionalidade
        </dd>
    </dl>
    <h4>Livros</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Título</th>
                <th>Ano de Publicação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var livro in Model.Livros)
            {
                <tr>
                    <td>@livro.Titulo</td>
                    <td>@livro.AnoPublicacao</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.AutorId">Editar</a> |
    <a asp-action="Index">Voltar à Lista</a>
</div>

